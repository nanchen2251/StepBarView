<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepBarView">
        <attr name="step_tv_color" format="color"/>
        <attr name="step_tv_size" format="dimension"/>
        <attr name="step_padding" format="dimension"/>
        <attr name="step_circle_color_checked" format="color"/>
        <attr name="step_circle_color_unchecked" format="color"/>
        <attr name="step_line_color" format="color"/>
        <attr name="step_number_color_checked" format="color"/>
        <attr name="step_number_color_unchecked" format="color"/>
        <attr name="step_edge_line_width" format="dimension"/>
        <attr name="step_center_line_width" format="dimension"/>
        <attr name="step_circle_radius" format="dimension"/>
        <attr name="step_top_name" format="reference"/>
        <attr name="step_bottom_name" format="reference"/>
        <attr name="step_check_number" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="tv_color_checked" format="color"/>
        <attr name="tv_color_unchecked" format="color"/>
        <attr name="bg_color_checked" format="color"/>
        <attr name="bg_color_unchecked" format="color"/>
        <attr name="step_names" format="reference"/>
        <attr name="step_view_padding" format="dimension"/>
        <attr name="step_width" format="dimension"/>
        <attr name="step_height" format="dimension"/>
        <attr name="check_num" format="integer"/>
    </declare-styleable>
</resources>